{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "web/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "env": {
    "VERCEL_ENV": "production",
    "PYTHONUNBUFFERED": "true"
  },
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": "web"
}
